extends ../layouts/base.pug

block variables
    - var title = 'Страница пользователя'

block content
    .wrapper
        header.header
            .header_main
                .header_userpic
                    .userpic
                        img(src='assets/img/default-avatar.jpg').userpic_image
                .header_userinfo
                    .userinfo
                        .userinfo_name Александра Соколова
                        .userinfo_about Я веб разработчик. Мне 24 года. Люблю путешествия, кодинг, фриланс и активный отдых.
                        .userinfo_social
                            +socials(['vk', 'fb', 'twitter', 'google', 'email'])
                .header_nav
                    +nav(['home'])
            .header_secondary
                .header_search
                    .search
                        +icon('search', ['icon-15', 'icon-iron'])
                        input(type='input', placeholder='Исследовать мир').search_input
        .content
            h1.title.title--1
            .content_inner
    footer.footer
        .footer_section
        .footer_scroll-btn
        .footer_section