mixin photo-delete
    .modal_overlay
    .modal
        header.modal_header
            .modal_title Редактировать фотографию
            a(href='#').modal_close
                +icon('close', ['icon-30', 'icon-iron'])
        section.modal_content
            .modal_container
                .modal_message Вы хотите удалить это фото?
                .btn_group
                    a(href='#').btn.btn--danger Да
                    a(href='#').btn.btn--link.btn--iron Отменить
        footer.modal_footer
            .btn_group
                a(href='#').btn.btn--info Сохранить
                a(href='#').btn.btn--link.btn--sky Отменить
            a(href='#').btn.btn--danger
                .btn_icon
                    +icon('delete', ['icon-15', 'icon-white'])
                .btn_text.is-hidden--phone Удалить